@page "/"

<PageTitle>DsStats</PageTitle>

<div class="container-fluid">
    <h3 class="fw-bold text-warning">Direct Strike Fan Project</h3>

    <div class="row mt-2">
        <div class="col-auto bgchart p-2 border rounded mt-1">
            <sc2dsstats.razorlib.Stats.TopStatsComponent></sc2dsstats.razorlib.Stats.TopStatsComponent>
        </div>
        <div class="col-auto bgchart p-2 ms-1 border rounded mt-1">
            <sc2dsstats.razorlib.Ratings.TopPlayerRatings RatingType="shared.RatingType.Cmdr"></sc2dsstats.razorlib.Ratings.TopPlayerRatings>
        </div>
        <div class="col-auto bgchart p-2 ms-1 border rounded mt-1">
            <sc2dsstats.razorlib.Ratings.TopPlayerRatings RatingType="shared.RatingType.Std"></sc2dsstats.razorlib.Ratings.TopPlayerRatings>
        </div>
    </div>

    <h3 class="mt-2 fw-bold text-warning">Features</h3>

    <div class="row mt-2">
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <div class="card" style="max-width: 400px;">
                <div class="card-header bgchart2">
                    <a href="/ratingbuilds">
                        <span class="badge text-info text-decoration-underline" style="font-size: 1.3rem;">
                            Builds
                        </span>
                    </a>
                </div>
                <div class="card-body fw-bold bgchart">
                    Top players unit compositions for every matchup
                </div>
            </div>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <div class="card" style="max-width: 400px;">
                <div class="card-header bgchart2">
                    <a href="/arcade/ratings">
                        <span class="badge text-info text-decoration-underline" style="font-size: 1.3rem;">
                            SC2Arcade Ratings
                        </span>
                    </a>
                </div>
                <div class="card-body fw-bold bgchart">
                    Player ratings with the data from <a href="https://sc2arcade.com/">SC2Arcade</a> - all lobbies played since 2021-02-01
                </div>
            </div>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <div class="card" style="max-width: 400px;">
                <div class="card-header bgchart2">
                    <a href="/cmdrreplays">
                        <span class="badge text-info text-decoration-underline" style="font-size: 1.3rem;">
                            Top Players per Commander
                        </span>
                    </a>
                </div>
                <div class="card-body fw-bold bgchart">
                    Player ratings for each Commander
                </div>
            </div>
        </div>
    </div>

    <h3 class="mt-2 fw-bold text-warning">Generate personal stats</h3>

    <div class="row mt-2">
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <div>
                <a href="https://www.microsoft.com/store/apps/9NNNMB503HN5">
                    <img src="images/store.png" alt="Microsoft Store" width="100" />
                    <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                        sc2dsstats Desktop App
                    </span>
                </a>
            </div>
            <div class="d-flex justify-content-center">
                <span class="badge bg-light">
                    <a href="https://www.youtube-nocookie.com/embed/g6Oya8hjIww">YouTube HowTo</a>
                </span>
            </div>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <a href="https://github.com/ipax77/dsstats.service">
                <img src="_content/sc2dsstats.razorlib/images/GitHub-Mark-Light-64px.png" alt="GitHub" width="30" />
                <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                    Windows Service
                </span>
            </a>
        </div>
    </div>

    <h3 class="mt-2 fw-bold text-warning">Ressources</h3>

    <div class="row mt-2">
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <a href="https://discord.gg/rKAyaggtqP">
                <img src="/images/discord.svg" alt="Discord" width="30" />
                <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                    Discord
                </span>
            </a>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <a href="https://github.com/ipax77/dsstats">
                <img src="_content/sc2dsstats.razorlib/images/GitHub-Mark-Light-64px.png" alt="GitHub" width="30" />
                <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                    GitHub Project
                </span>
            </a>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <a href="https://github.com/ipax77/dsstats/wiki">
                <img src="_content/sc2dsstats.razorlib/images/GitHub-Mark-Light-64px.png" alt="GitHub" width="30" />
                <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                    GitHub Wiki
                </span>
            </a>
        </div>
    </div>
</div>
