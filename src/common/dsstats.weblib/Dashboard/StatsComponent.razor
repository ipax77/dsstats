@using dsstats.shared
@using dsstats.shared.Interfaces
@inject IDashboardStatsService DashboardStatsService

<div class="p-2">
    <h3 class="mt-2 fw-bold text-warning d-inline-block p-2 bgchart border border-dark rounded">Stats past 90 days</h3>
    @if (response == null)
    {
        <!-- Loading Skeleton -->
        <div class="row g-3 mb-4">
            @for (int i = 0; i < 4; i++)
            {
                <div class="col-12 col-sm-6 col-xl-3">
                    <div class="card shadow-sm">
                        <div class="card-body bgchart d-flex align-items-center">
                            <div class="placeholder-glow flex-shrink-0 me-3">
                                <div class="placeholder rounded-3" style="width: 56px; height: 56px;"></div>
                            </div>
                            <div class="flex-grow-1 placeholder-glow">
                                <div class="placeholder col-7 mb-2"></div>
                                <div class="placeholder col-10" style="height: 28px;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Loaded Content -->
        <div class="row g-3 mb-4">
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm hover-lift">
                    <div class="card-body bgchart d-flex align-items-center">
                        <div class="stat-icon rounded-3 flex-shrink-0 me-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
