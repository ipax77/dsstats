@code {
	private long maxFileSize = 3 * 1024 * 1024; // 3MB
	private int maxAllowedFiles = 1;
	private bool isLoading;
	string result = string.Empty;

	Guid Guid;
	private HubConnection? hubConnection;
	DecodeFinishedEventArgs? decodeFinished;
	ReplayDetails? replayDetails;
	ReplayComponent? replayComponent;

	protected override void OnInitialized()
	{
		using var httpClient = HttpClientFactory.CreateClient("api");
		var uri = httpClient.BaseAddress ?? new Uri("https://dsstats.pax77.org");
		uri = new Uri(uri, "/hubs/upload");
		hubConnection = new HubConnectionBuilder()
		.WithUrl(uri)
		.Build();

		hubConnection.On<DecodeFinishedEventArgs>("DecodeResult", (e) =>
		{
			decodeFinished = e;
			result = e.Error ?? "Decode completed";
			if (!string.IsNullOrEmpty(e.ReplayHash))
			{
				_ = LoadReplay(e.ReplayHash);
			}
			isLoading = false;
			InvokeAsync(StateHasChanged);
		});

		hubConnection.Reconnected += async _ =>
		{
			await hubConnection.SendAsync("Rejoin", Guid);
		};

		base.OnInitialized();
	}

	private async Task LoadFiles(InputFileChangeEventArgs e)
	{
		isLoading = true;
		result = string.Empty;
		await InvokeAsync(StateHasChanged);

		var file = e.GetMultipleFiles(maxAllowedFiles).FirstOrDefault();
		if (file == null || hubConnection == null)
		{
			return;
		}
		try
		{
			if (hubConnection.State != HubConnectionState.Connected)
			{
				await hubConnection.StartAsync();
			}
			decodeFinished = null;
			Guid = Guid.NewGuid();

			await hubConnection.SendAsync("DecodeRequest", Guid);

			using var content = new MultipartFormDataContent();
			var fileContent = new StreamContent(file.OpenReadStream(maxFileSize));
			fileContent.Headers.ContentType =
				new MediaTypeHeaderValue("application/octet-stream");

			content.Add(
				content: fileContent,
				name: "file",
				fileName: file.Name);

			using var httpClient = HttpClientFactory.CreateClient("api");
			httpClient.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("DS8upload77");
			var response = await httpClient.PostAsync($"api10/upload/uploadreplay/{Guid}", content);
			response.EnsureSuccessStatusCode();

			Logger.LogInformation(
				"Unsafe Filename: {UnsafeFilename} File saved",
				file.Name);
			result = "Upload successful.";
		}
		catch (Exception ex)
		{
			Logger.LogError("File: {Filename} Error: {Error}",
				file.Name, ex.Message);
			result = ex.Message;
		}

		await InvokeAsync(StateHasChanged);
	}

	private async Task LoadReplay(string replayHash)
	{
		var replay = await ReplayRepository.GetReplayDetails(replayHash);
		if (replay == null)
		{
			return;
		}
		replayDetails = replay;
		replayComponent?.Update(replayDetails);
		await InvokeAsync(StateHasChanged);
	}

	public void Dispose()
	{
		hubConnection?.DisposeAsync();
	}
}
