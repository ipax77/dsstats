@page "/"

<PageTitle>dsstats</PageTitle>
<div class="container-fluid mb-5">
    <div class="d-flex">
        <div class="me-1 align-self-center mb-1">
            <img src="/favicon.png" alt="dsstats" />
        </div>
        <div>
            <h2 class="fw-bold text-warning">Direct Strike Fan Project</h2>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-auto bgchart p-2 border rounded mt-1">
            <dsstats.razorlib.Stats.TopStatsComponent />
        </div>
        <div class="col-auto bgchart p-2 border rounded mt-1 ms-1">
            <dsstats.razorlib.Players.TopPlayersComponent RatingType="shared.RatingType.Cmdr" />
        </div>
        <div class="col-auto bgchart p-2 border rounded mt-1 ms-1">
            <dsstats.razorlib.Players.TopPlayersComponent RatingType="shared.RatingType.Std" />
        </div>
    </div>

    <h3 class="mt-2 fw-bold text-warning d-inline-block p-2 bgchart border border-dark rounded">Features</h3>

    <div class="row mt-2">
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <div class="card" style="max-width: 400px;">
                <div class="card-header bgchart2" style="font-size: 1.3rem;">
                    <span class="bi bi-person-gear me-1" aria-hidden="true"></span>
                    <a href="/builds">
                        <span class="badge text-info text-decoration-underline">
                            Builds
                        </span>
                    </a>
                </div>
                <div class="card-body fw-bold bgchart">
                    Top players unit compositions for every matchup
                </div>
            </div>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <div class="card" style="max-width: 400px;">
                <div class="card-header bgchart2" style="font-size: 1.3rem;">
                    <span class="bi bi-people me-1" aria-hidden="true"></span>
                    <a href="/ratings">
                        <span class="badge text-info text-decoration-underline">
                            Ratings
                        </span>
                    </a>
                </div>
                <div class="card-body fw-bold bgchart">
                    Player ratings with the data from <a href="https://sc2arcade.com/">SC2Arcade</a> - all public lobbies played since 2021-02-01
                </div>
            </div>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <div class="card" style="max-width: 400px;">
                <div class="card-header bgchart2" style="font-size: 1.3rem;">
                    <span class="bi bi-person-workspace me-1" aria-hidden="true"></span>
                    <a href="/cmdrinfos">
                        <span class="badge text-info text-decoration-underline">
                            Top Players per Commander
                        </span>
                    </a>
                </div>
                <div class="card-body fw-bold bgchart">
                    Player ratings for each Commander
                </div>
            </div>
        </div>
    </div>

    <h3 class="mt-2 fw-bold text-warning d-inline-block p-2 bgchart border border-dark rounded">Generate personal stats</h3>

    <div class="row mt-2">
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <div>
                <a href="https://apps.microsoft.com/detail/9nnnmb503hn5">
                    <img src="_content/dsstats.razorlib/images/store.png" alt="Microsoft Store" width="100" />
                    <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                        sc2dsstats Desktop App
                    </span>
                </a>
            </div>
            <div class="d-flex justify-content-center">
                <span class="badge bg-light">
                    <a href="https://www.youtube-nocookie.com/embed/g6Oya8hjIww">YouTube HowTo</a>
                </span>
            </div>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <a href="https://github.com/ipax77/dsstats.service">
                <img src="_content/dsstats.razorlib/images/GitHub-Mark-Light-64px.png" alt="GitHub" width="30" />
                <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                    Windows Service
                </span>
            </a>
        </div>
    </div>

    <h3 class="mt-2 fw-bold text-warning d-inline-block p-2 bgchart border border-dark rounded">Ressources</h3>

    <div class="row mt-2">
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <a href="https://discord.gg/rKAyaggtqP">
                <img src="_content/dsstats.razorlib/images/discord.svg" alt="Discord" width="30" />
                <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                    Discord
                </span>
            </a>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <a href="https://github.com/ipax77/dsstats">
                <img src="_content/dsstats.razorlib/images/GitHub-Mark-Light-64px.png" alt="GitHub" width="30" />
                <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                    GitHub Project
                </span>
            </a>
        </div>
        <div class="col-auto bgchart p-2 ms-2 border rounded mt-1">
            <a href="https://github.com/ipax77/dsstats/wiki">
                <img src="_content/dsstats.razorlib/images/GitHub-Mark-Light-64px.png" alt="GitHub" width="30" />
                <span class="badge bgchart2 text-decoration-underline" style="font-size: 1rem;">
                    GitHub Wiki
                </span>
            </a>
        </div>
    </div>
</div>