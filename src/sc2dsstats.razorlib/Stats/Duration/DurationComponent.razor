@if (isLoading)
{
    <div class="spinner-border spinner-border-sm text-info ms-2" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}

<div>
    <CascadingValue Value="Request">
        <DurationRequestComponent OnRequestChanged="LoadData" OnRatingTypeChanged="RatingTypeChanged"></DurationRequestComponent>
    </CascadingValue>
</div>

<div class="border rounded border-secondary"
    style="min-width: 550px; width: 66vw; height: calc(66vw * 0.5); min-height: 275px;">
    <CascadingValue Value="Request">
    @if (Response != null)
    {
        <DurationChart @ref="durationChart" Response="Response"></DurationChart>
    }
    </CascadingValue>
</div>
<div class="mt-3">
    <p class="text-warning">
        Winrate for all commanders whose games ended with the specified duration. The number in brackets indicates the number of matchups. The minimum playing time is 5 minutes.
    </p>
    @if (Response != null)
    {
        <DurationTable @ref="durationTable" Response="Response"></DurationTable>
    }
</div>