@using pax.dsstats.shared.Interfaces;
@using pax.dsstats.shared;
@inject IWinrateService winrateService
@implements IDisposable

<div>
    <CascadingValue Value="Request">
        <WinrateRequestComponent OnRequestChanged="LoadData"></WinrateRequestComponent>
    </CascadingValue>
</div>

<div class="mt-2">
    @if (response != null)
    {
        <div class="border rounded border-secondary"
             style="min-width: 650px; width: 77vw; height: calc(77vw * 0.5); min-height: 275px;">

            <WinrateChart @ref="winrateChart" Request="Request" Response="response"></WinrateChart>
        </div>
    }
</div>


@code {
    [Parameter, EditorRequired]
    public WinrateRequest Request { get; set; } = default!;

    CancellationTokenSource cts = new();
    bool isLoading;

    WinrateResponse? response = null;
    WinrateChart? winrateChart;

    protected override void OnInitialized()
    {
        _ = LoadData();
        base.OnInitialized();
    }

    private async Task LoadData()
    {
        isLoading = true;
        await InvokeAsync(() => StateHasChanged());
        response = await winrateService.GetWinrate(Request, cts.Token);

        winrateChart?.PrepareData(response, Request);

        isLoading = false;
        await InvokeAsync(() => StateHasChanged());
    }

    public void Dispose()
    {
        cts.Cancel();
        cts.Dispose();
    }
}
