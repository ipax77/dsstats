@using Microsoft.AspNetCore.Components.Routing
@using pax.dsstats.shared;
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg bg-dark p-1">
    <div class="container-fluid">
        <a class="navbar-brand text-light" href="stats">Stats</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item px-1">
                    <NavLink class="nav-link" href="stats?StatsMode=Winrate" @onclick="e => HandleClick(StatsMode.Winrate)">
                        <span class="oi oi-bar-chart" arie-hidden="true"></span> Winrate
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stats/timeline">
                        <span class="oi oi-timer" aria-hidden="true"></span> Timeline
                    </NavLink>
                </li>                
                <li class="nav-item px-1">
                    <NavLink class="nav-link" href="stats?StatsMode=Mvp" @onclick="e => HandleClick(StatsMode.Mvp)">
                        <span class="oi oi-bar-chart" arie-hidden="true"></span> Mvp
                    </NavLink>
                </li>
                <li class="nav-item px-1">
                    <NavLink class="nav-link" href="stats?StatsMode=Synergy" @onclick="e => HandleClick(StatsMode.Synergy)">
                        <span class="oi oi-basket" arie-hidden="true"></span> Synergy
                    </NavLink>
                </li>
                <li class="nav-item px-1">
                    <NavLink class="nav-link" href="stats?StatsMode=Count" @onclick="e => HandleClick(StatsMode.Count)">
                        <span class="oi oi-pie-chart" arie-hidden="true"></span> Count
                    </NavLink>
                </li>
                <li class="nav-item px-1">
                    <NavLink class="nav-link" href="stats/duration">
                        <span class="oi oi-signal" arie-hidden="true"></span> Duration
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private void HandleClick(StatsMode statsMode)
    {
        NavigationManager.NavigateTo($"stats?StatsMode={statsMode.ToString()}", true);
    }
}
