
<div class="row">
    <div>
        @if (isLoading)
        {
            <div class="spinner-border spinner-border-sm text-danger" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        } 
        else
        {
            <div>
                <span class="ms-3"></span>
            </div>
        }
    </div>
    <div>
        <CascadingValue Value="Request">
            <DistributionRequestComponent OnRequestChanged="LoadData" />
        </CascadingValue>
    </div>
</div>

<div id="distributionChart" class="border rounded border-secondary bgchart"
     style="min-width: 600px; width: 50vw; height: calc(50vw * 0.5); min-height: 300px;">
    <pax.BlazorChartJs.ChartComponent ChartJsConfig="chartConfig" OnEventTriggered="ChartEventTriggered" />
</div>
